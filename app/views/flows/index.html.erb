<h1>Listing flows</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flows.each do |flow| %>
      <tr>
        <td><%= flow.description %></td>
        <td><%= flow.user.email if flow.user %></td>
        <td><%= link_to 'Show', flow %></td>
        <% if flow.user == current_user %>
         <td><%= link_to 'Edit', edit_flow_path(flow) %></td>
         <td><%= link_to 'Destroy', flow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Flow', new_flow_path %>
<% end %>
